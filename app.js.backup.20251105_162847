            spaces: [
                '大堂：以爱晚亭为灵感的接待区，红木屏风分隔空间',
                '客房：枫叶图案地毯，书桌配古典文房四宝',
                '餐厅：湘江夜景主题壁画，诗词元素装饰'
            ],
            experience: [
                '入住体验：提供毛笔书法体验，客人可书写《沁园春》',
                '文化活动：定期举办诗词朗诵会',
                '特色服务：房间内放置岳麓书院文化读物'
            ]
        },
        '青砖呼吸录': {
